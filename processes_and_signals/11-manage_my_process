#!/usr/bin/env bash
# Starts, stops, or restarts the manage_my_process daemon

PIDFILE="/tmp/my_process.pid"
PROCESS="./manage_my_process"

case "$1" in
start)
$PROCESS &
echo $! > "$PIDFILE"
echo "manage_my_process started"
;;
stop)
kill "$(cat "$PIDFILE")"
rm -f "$PIDFILE"
echo "manage_my_process stopped"
;;
restart)
kill "$(cat "$PIDFILE")"
rm -f "$PIDFILE"
$PROCESS &
echo $! > "$PIDFILE" 
echo "manage_my_process restarted"
;;
*)
echo "Usage: manage_my_process {start|stop|restart}"
exit 1
;;
esac
